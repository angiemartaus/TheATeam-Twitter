<% if @current_user %>
  <% if @current_user.following?(@user) %>
    <%= button_to "Unfollow", follow_path(@user), :class => "btn btn-primary", method: :delete, :remote => true %>
    <% else %>
    <%= button_to "Follow", follows_path(id: @user), :class => "btn btn-primary", :remote => true %>
  <% end %>
<% end %>
