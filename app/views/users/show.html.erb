<h1><%= @user.username %></h1>

<div class="container" style="float: right; margin-right: 30px;">
  <h3>Followers</h3>
  <ul>
    <% @user.followers.each do |x| %>
      <li><%= x.username %></li>
    <% end %>
  </ul>
</div>
<br>
<%= button_to "Follow", follow_user_path, :class => "btn btn-default btn-lg" %>
<br>
<%= link_to "Home", root_path %>
<div class="container">
  <% @user.posts.each do |x| %>
    <%= x.message %>
    <br>
  <% end %>
</div>
