<h1><%= @user.username %></h1>

<%= button_to "Follow", follow_user_path, :class => "btn btn-default btn-lg" %>
<%= link_to "Home", root_path %>

<div class="container">
  <div class="col-xs-7 container">
    <% @user.posts.each do |x| %>
      <%= x.message %>
      <br>
    <% end %>
  </div>
  <div class="col-xs-5 container">
    <% @user.followers.each do |x| %>
      <%= x.username %>
    <% end %>
  </div>
</div>
