<h1>Create an account:</h1>

<div class="container">
  <%= bootstrap_form_for @user do |x| %>
    <%= x.text_field :username %>
    <%= x.email_field :email %>
    <%= x.password_field :password %>
    <%= x.password_field :password_confirmation %>
    <%= x.submit "Submit" %>
  <% end %>
</div>
<div class= "container">
  <%= link_to "Home", root_path %>
</div>
