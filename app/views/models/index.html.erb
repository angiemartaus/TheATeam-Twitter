
div class="container">
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<p>Posted <%= distance_of_time_in_words(post.created_at) %> later</p>
  <tbody>
    <% post.each do |post| %>
      <tr>
        <td><%= post %></td>
        <td><%= message %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
