<h1>Login</h1>

<div class="container">
  <%= form_for @user_session do |x| %>
  <% if @user_session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
    <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
    <p>Username:</p>
      <%= x.text_field :username %>
    <p>Password:</p>
      <%= x.password_field :password %>
    <%= x.submit "Login" %>
  <% end %>
</div>
<div class= "container">
  <%= link_to "Home", root_path %>
</div>
